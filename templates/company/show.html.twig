{% extends 'base.html.twig' %}

{% block title %}Company{% endblock %}

{% block body %}
<div class="container mt-3">
    {% if company is defined and company is not null %}
        <fieldset disabled="disabled" class="mb-5">
            <div class="container mt-3">
                <div class="row col-md-12">
                    <div class="col-md-6">
                        <label for="company_name">Name</label><input type="text" id="company_name" class="form-control" value="{{ company.getName() }}" />
                    </div>
                    <div class="col-md-6">
                        <label for="company_registration_code">Registration code</label><input type="number" id="company_registration_code" class="form-control" value="{{ company.getRegistrationCode() }}" />
                    </div>
                </div>
                <div class="row col-md-12">
                    <div class="col-md-6">
                        <label for="company_vat">Vat</label><input type="text" id="company_vat" class="form-control" value="{{ company.getVat() }}" />
                    </div>
                    <div class="col-md-6">
                        <label for="company_mobile_phone">Mobile phone</label><input type="text" id="company_mobile_phone" class="form-control" value="{{ company.getMobilePhone() }}" />
                    </div>

                </div>
                <div class="row col-md-12">
                    <div class="col-md-12">
                        <label for="company_address">Address</label><textarea id="company_address" class="form-control"> {{ company.getAddress() }}</textarea>
                    </div>
                </div>
            </div>
        </fieldset>
    {% endif %}
    {% if table is defined and table is not null %}
        <div>
            <table class="table table-striped">
                <thead>
                <tr>
                    {% for th in table[0] %}
                        <th>{{ th }}</th>
                    {% endfor %}
                </tr>
                </thead>
                <tbody>
                {% for tr in table | slice(1) %}
                    <tr>
                        {% for td in tr %}
                            <td>{{ td }}</td>
                        {% endfor %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
    <div class="form-group row mt-5">
        <div class="col-sm-10 offset-sm-2" style="text-align: center;">
            <a href="{{ path('app_company_index') }}" type="button" class="btn btn-warning" >Back to List</a>
        </div>
    </div>
</div>
{% endblock %}
